#:kivy 1.0
#:import WorkspaceManager classes.screens
#:import ContainersLayout classes.containers
#:import ImagesLayout classes.images
#:import ImageScreen classes.screens
#:import ContainerScreen classes.screens
#:import SettingScreen  classes.screens
#:import ComposeScreen  classes.screens

<ContainersWorkspace@ScrollView>:
    id: container_workspace
    do_scroll_y: True
    ContainersLayout

<ImageWorkspace@ScrollView>:
    id: container_workspace
    do_scroll_y: True
    ImagesLayout

<SettingsWorkspace@ScrollView>

<DockerComposesWorkspace@ScrollView>

<ContainerScreen>:
    on_enter: self.start_events(app)
    on_leave: self.pause_events(app)
    ContainersWorkspace

<ImageScreen>:
    ImageWorkspace

<SettingScreen>:
    SettingsWorkspace

<ComposeScreen>:
    DockerComposesWorkspace
