#:kivy 1.0
#:import BaseBlock classes.base_blocks

<BaseBlock>:
    orientation: 'horizontal'
    image_path: self.image_path
    bg_color: self.bg_color
    size_hint_max: self.s_hint_max
    size_hint_min: self.s_hint_min
    canvas.before:
        Color:
            rgba: root.bg_color
        Rectangle:
            pos: self.pos
            size: root.size
    AnchorLayout:
        size_hint_x: .3
        anchor_x: 'center'
        anchor_y: 'center'
        Image:
            id: block_image
            size_hint: .8, .8
            source: root.image_path
    GridLayout:
        rows: 3
        cols: 3
        Label:
            max_lines: 1
            text: root.label_name
