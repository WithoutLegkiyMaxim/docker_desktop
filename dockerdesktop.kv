#:kivy 1.0

<Menu@BoxLayout>:
    id: menu_btn_layout
    spacing: 4
    size_hint_y: .4
    orientation: 'vertical'
    MenuButton:
        id: menu_images_btn
        text: 'IMAGES'
        state: 'down'
    MenuButton:
        id: menu_containers_btn
        text: 'CONTAINERS'
    MenuButton:
        id: menu_composes_btn
        text: 'DOCKER-COMPOSES'
    MenuButton:
        id: menu_settings_btn
        text: 'SETTINGS'

<Logo@AnchorLayout>:
    anchor_x: 'center'
    anchor_y: 'center'
    Image:
        id: menu_docker_logo
        size_hint: .8, .8
        source: 'images/docker_logo.png'

<MenuLayout@BoxLayout>:
    id: menu_layout
    spacing: 4
    padding: 0, 4
    orientation: 'vertical'
    size_hint: .2, 1
    size_hint_min: 100, 100
    canvas.before:
        Color:
            rgba: .23, .23, .23, 1
        Rectangle:
            pos: self.pos
            size: self.size

<DockerWorkspace>:
    id: global_layout
    spacing: 10
    orientation: 'horizontal'
    MenuLayout:
        Menu
        Logo
    BoxLayout:
        id: workspace_layout
        orientation: 'vertical'
        size_hint_x: .7
        spacing: 10
        BoxLayout:
            id: filters_layout
            orientation: 'horizontal'
            size_hint_y: 0.05
            TextInput:
                id: search
                multiline: False
                size_hint_x: 0.3
                halign: 'left'
                display_border: 0
                border: 1, 1, 1, 1
                background_color: 0.23, 0.23, 0.23, 1
                foreground_color: 0.81, 0.81, 0.81, 1
                hint_text: "search"
            Label:
                id: filters
                size_hint_x: 0.7
                text: "filters"
        WorkspaceManager:
            id: workspace_manager
            ImageScreen
            ContainerScreen
            SettingScreen
            ComposeScreen