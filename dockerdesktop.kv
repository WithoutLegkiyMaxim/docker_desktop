#:kivy 1.0

<ContainersLayout>:
    id: instance_layout
    spacing: 10
    padding: 10, 0
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: root.size
    size_hint_y: None
    id: containers_layout
    height: self.minimum_height

<MenuButton>:
    group: 'menu'
    bold: True
    color: (0.81, 0.81, 0.81, 1)
    size_hint_min: (50, 30)

<Container>:
    orientation: 'horizontal'
    image_path: self.image_path
    bg_color: self.bg_color
    size_hint_max: self.s_hint_max
    size_hint_min: self.s_hint_min
    # on_touch_down: self.something()
    canvas.before:
        Color:
            rgba: root.bg_color
        Rectangle:
            pos: self.pos
            size: root.size
    AnchorLayout:
        size_hint_x: .3
        anchor_x: 'center'
        anchor_y: 'center'
        Image:
            id: menu_docker_logo
            size_hint: .8, .8
            source: root.image_path
    GridLayout:
        rows: 3
        cols: 3
        Label:
            text: root.container_tag

<ContainersWorkspace@ScrollView>:
    id: container_workspace
    do_scroll_y: True
    ContainersLayout

<ImageWorkspace@ScrollView>:
    id: container_workspace
    do_scroll_y: True
    ContainersLayout

<SettingsWorkspace@BoxLayout>

<DockerComposesWorkspace@BoxLayout>

<ContainerScreen>:
    ContainersWorkspace

<ImageScreen>:
    ImageWorkspace

<SettingScreen>:
    SettingsWorkspace

<ComposeScreen>:
    DockerComposesWorkspace

<WorkspaceManager>:
    ImageScreen
    ContainerScreen
    SettingScreen
    ComposeScreen

<DockerWorkspace>:
    id: global_layout
    spacing: 10
    orientation: 'horizontal'
    BoxLayout:
        id: menu_layout
        spacing: 4
        padding: 0, 4
        orientation: 'vertical'
        size_hint: .2, 1
        size_hint_min: 100, 100
        canvas.before:
            Color:
                rgba: .23, .23, .23, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            id: menu_btn_layout
            spacing: 4
            size_hint_y: .4
            orientation: 'vertical'
            MenuButton:
                id: menu_images_btn
                text: 'IMAGES'
                state: 'down'
                on_state: self.select_workspace(root)
            MenuButton:
                id: menu_containers_btn
                text: 'CONTAINERS'
                on_state: self.select_workspace(root)
            MenuButton:
                id: menu_composes_btn
                text: 'DOCKER-COMPOSES'
                on_state: self.select_workspace(root)
            MenuButton:
                id: menu_settings_btn
                text: 'SETTINGS'
                on_state: self.select_workspace(root)
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Image:
                id: menu_docker_logo
                size_hint: .8, .8
                source: 'images/docker_logo.png'
    BoxLayout:
        id: workspace_layout
        orientation: 'vertical'
        size_hint_x: .7
        spacing: 10
        BoxLayout:
            id: filters_layout
            orientation: 'horizontal'
            size_hint_y: 0.05
            TextInput:
                id: search
                multiline: False
                size_hint_x: 0.3
                halign: 'left'
                display_border: 0
                border: 1, 1, 1, 1
                background_color: 0.23, 0.23, 0.23, 1
                foreground_color: 0.81, 0.81, 0.81, 1
                hint_text: "search"
            Label:
                id: filters
                size_hint_x: 0.7
                text: "filters"
        WorkspaceManager:
            id: workspace_manager
